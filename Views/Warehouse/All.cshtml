@model IEnumerable<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>

@{
    ViewData["Title"] = "All";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>().ContactPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>().Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault<ContainersCRM.ViewModels.Warehouse.WarehouseViewModel>().DistrictName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                <a asp-action="Move" asp-route-id="@item.Id">Move</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
